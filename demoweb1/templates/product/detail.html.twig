{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-7 mt-4 text-center">
 <table class="table table-primary mt-3">
    <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Category</th>
        <th>Menu</th>
    </tr>
   <tr>
      <td>{{ product.name }}</td>
      <td>{{ product.quantity }}</td>
      <td>{{ product.price }} $ </td>
      <td>
         {% if product.category != null %}
            <a href="{{ path('category_detail', {'id' : product.category.id })}}">
               {{ product.category.name }} 
            </a>
         {% else %}
            <p>No category</p>
         {% endif %}
      </td>
      <td>
            <a class="btn btn-info" href="{{ path('product_detail' , { 'id': product.id }) }}">Detail</a>
            <a class="btn btn-warning" href="{{ path('product_edit', { 'id': product.id }) }}">Edit</a>
            <a class="btn btn-danger" href="{{ path('product_delete', { 'id': product.id }) }}"
            onclick="return confirm('Do you want to delete this product ?')"     
            >Delete</a>
      </td>
   </tr>
 </table>
</div>
{% endblock %}
