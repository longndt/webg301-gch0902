{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-5 mt-4 text-center">
 <table class="table table-primary mt-3">
    <tr>
        <th>Name</th>
        <th>Products</th>
        <th>Menu</th>
    </tr>
   <tr>
      <td>{{ category.name }}</td>
      <td> 
        {% for product in category.products %}
          <a href="{{ path('product_detail', {'id': product.id })}}">
            {{ product.name }}
          </a> 
          <br>
        {% endfor %}
      </td>
      <td>
            <a class="btn btn-info" href="{{ path('category_detail' , { 'id': category.id }) }}">Detail</a>
            <a class="btn btn-warning" href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
            <a class="btn btn-danger" href="{{ path('category_delete', { 'id': category.id }) }}"
            onclick="return confirm('Do you want to delete this category ?')"     
            >Delete</a>
      </td>
   </tr>
 </table>
</div>
{% endblock %}
