{% extends 'base.html.twig' %}

{% block title %}Laptop index{% endblock %}

{% block body %}
    <h1>Laptop index</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Color</th>
                <th>Year</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for laptop in laptops %}
            <tr>
                <td>{{ laptop.id }}</td>
                <td>{{ laptop.name }}</td>
                <td>{{ laptop.brand }}</td>
                <td>{{ laptop.price }}</td>
                <td>{{ laptop.color }}</td>
                <td>{{ laptop.year }}</td>
                <td><img src="{{ laptop.image }}" width="100" height="100"></td>
                <td>
                    <a href="{{ path('laptop_show', {'id': laptop.id}) }}">show</a>
                    <a href="{{ path('laptop_edit', {'id': laptop.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('laptop_new') }}">Create new</a>
{% endblock %}
