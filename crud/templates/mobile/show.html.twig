{% extends 'base.html.twig' %}

{% block title %}Mobile{% endblock %}

{% block body %}
    <h1>Mobile</h1>

    <table class="table table-info">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mobile.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mobile.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ mobile.price }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ mobile.date ? mobile.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ mobile.image }}" width="200" height="200"></td>
