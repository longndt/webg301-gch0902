<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Book management system {% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <!-- CSS only -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {# navigation bar #}
        {% block nav %}
            <ul class="nav justify-content-center|justify-content-end">
                <h2><li class="nav-item">
                    <a class="nav-link" href="{{ path('home')}}">Home</a>
                </li></h2>
                <h2><li class="nav-item">
                    <a class="nav-link" href="{{ path('book_index')}}">Book</a>
                </li></h2>
                <h2><li class="nav-item">
                    <a class="nav-link" href="{{ path('author_index')}}">Author</a>
                </li></h2>
                <h2><i><li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout')}}">Logout</a>
                </li></i></h2>
            </ul>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
