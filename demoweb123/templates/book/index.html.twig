{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 mt-4 text-center">
<h3 class="text text-primary"> Book List </h3>
<table class="table table-success mt-3">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Book Title</th>
            <th>Book Published Year</th>
            <th>Book Price</th>
            <th>Book Image</th>
        </tr>
    </thead>
    <tbody>
    {% for book in books %}
        <tr>
            <td>{{ book.id }}</td>
            <td>{{ book.title }}</td>
            <td>{{ book.year }}</td>
            <td>{{ book.price }} $</td>
            <td>
                <img src="{{ book.image }}" width="100" height="100">
            </td>
        </tr>
    {% endfor %} 
    </tbody>
</table>
</div>
{% endblock %}


