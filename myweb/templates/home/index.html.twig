{% extends 'base.html.twig' %}

{% block body %}
   <img src="{{ asset('images/greenwich.jpg')}}" width="50%" height="50%">

   <h3>University: {{ university }}</h3>
   <h3>Semester: {{ semester }}</h3>
   <h3>Module: {{ module }}</h3>
   <table class="table-bordered">
        <thead>
            <tr>
                <th>Number</th>
                <th>Mobile</th>
            </tr>
        </thead>
        <tbody>
            {% set i = 1 %}
            {% for mobile in mobiles %}
                <tr>
                    <td>{{ i }}</td>
                    <td>{{ mobile }}</td>
                </tr>
                {% set i = i+1 %}
                <br>
            {% endfor %}
        </tbody>
   </table>
   
{% endblock %}
